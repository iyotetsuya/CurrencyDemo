<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_navigation"
    app:startDestination="@id/currencyListFragment">
    <fragment
        android:id="@+id/currencyListFragment"
        android:name="iyotetsuya.currencyconversion.ui.currency.CurrencyListFragment"
        android:label="CurrencyListFragment">
        <action
            android:id="@+id/action_currencyListFragment_to_inputFragment"
            app:destination="@id/inputFragment" />
    </fragment>
    <fragment
        android:id="@+id/inputFragment"
        android:name="iyotetsuya.currencyconversion.ui.currency.InputFragment"
        android:label="InputFragment">
        <argument
            android:name="currencyCode"
            app:argType="string" />
    </fragment>


</navigation>